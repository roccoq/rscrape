# EditorConfig: https://editorconfig.org
# This file helps ensure consistent style across editors, linters, and formatters.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
# Python-specific settings
indent_size = 4
max_line_length = 88   # Matches Black & Ruff
# Ensure files end with a newline
insert_final_newline = true

[*.{yml,yaml,json,toml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false  # allow deliberate trailing spaces for line breaks

[Makefile]
indent_style = tab

[*.sh]
indent_size = 4

[tests/*]
# Allow slightly longer lines in tests (fixtures, long asserts)
max_line_length = 120

# Optional: explicitly mark tool alignment for devs
# Black, Ruff, and mypy expect:
# - 4 spaces, LF line endings
# - line length of 88 (except tests)
# - UTF-8 encoding
